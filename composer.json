{
    "name": "nunomaduro/patrol",
    "description": "An elegant command-line tool that keeps your PHP Project's dependencies in check",
    "keywords": ["php", "patrol", "dependencies", "composer"],
    "license": "MIT",
    "authors": [
        {
            "name": "Nuno Maduro",
            "email": "enunomaduro@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "composer/semver": "^3.4.0",
        "guzzlehttp/guzzle": "^7.8.0",
        "psr/http-client": "^1.0.3",
        "symfony/console": "^6.3.4|^7.0.0",
        "symfony/process": "^6.3.4|^7.0.0"
    },
    "require-dev": {
        "laravel/pint": "^1.13.3",
        "pestphp/pest": "^2.23.2",
        "phpstan/phpstan": "^1.10.38",
        "symfony/var-dumper": "^6.3.5|^7.0.0"
    },
    "autoload": {
        "psr-4": {
            "NunoMaduro\\Patrol\\": "src/"
        },
        "files": [
            "./src/Support/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "bin/patrol"
    ],
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "pint",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
